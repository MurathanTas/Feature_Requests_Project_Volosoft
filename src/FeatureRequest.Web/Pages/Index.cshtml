@page
@using Microsoft.AspNetCore.Mvc.Localization
@using FeatureRequest.Localization
@using Volo.Abp.Users
@inject IHtmlLocalizer<FeatureRequestResource> L
@inject ICurrentUser CurrentUser
@model FeatureRequest.Web.Pages.IndexModel
@{
    ViewData["Title"] = L["Menu:Home"];
}

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 80px 0;
        border-radius: 0 0 30px 30px;
        margin-top: -1.5rem;
        margin-left: -1.5rem;
        margin-right: -1.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }
    
    .feature-card {
        border: none;
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
        background: white;
    }
    
    .feature-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.1);
    }
    
    .feature-icon {
        width: 70px;
        height: 70px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        margin-bottom: 1rem;
        font-size: 1.75rem;
    }
    
    .icon-bg-1 { background-color: rgba(102, 126, 234, 0.1); color: #667eea; }
    .icon-bg-2 { background-color: rgba(255, 107, 107, 0.1); color: #ff6b6b; }
    .icon-bg-3 { background-color: rgba(29, 209, 161, 0.1); color: #1dd1a1; }
    
    .cta-btn {
        padding: 12px 30px;
        border-radius: 30px;
        font-weight: 600;
        transition: all 0.3s;
        text-transform: uppercase;
        letter-spacing: 1px;
    }
    
    .cta-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }
</style>

<div class="hero-section text-center">
    <div class="container">
        <h1 class="display-4 fw-bold mb-3">
            @L["HomePage:Title"]
        </h1>
        <p class="lead mb-4 col-lg-8 mx-auto opacity-75">
            @L["HomePage:Subtitle"]
        </p>
        <div class="d-flex justify-content-center gap-3">
            @if (!CurrentUser.IsAuthenticated)
            {
                <a href="/Account/Login" class="btn btn-light btn-lg cta-btn text-primary">
                    <i class="fa fa-sign-in-alt me-2"></i> @L["HomePage:Login"]
                </a>
            }
            else
            {
                <a href="/FeatureRequests" class="btn btn-light btn-lg cta-btn text-primary">
                    <i class="fa fa-lightbulb me-2"></i> @L["HomePage:ViewRequests"]
                </a>
                <a href="/FeatureRequests/Dashboard" class="btn btn-outline-light btn-lg cta-btn">
                    <i class="fa fa-chart-line me-2"></i> @L["HomePage:Dashboard"]
                </a>
            }
        </div>
    </div>
</div>

<abp-container class="pb-5">
    <abp-row class="g-4">
        <abp-column size-md="_4">
            <abp-card class="feature-card p-4 text-center h-100">
                <abp-card-body>
                    <div class="feature-icon icon-bg-1 mx-auto">
                        <i class="fas fa-plus"></i>
                    </div>
                    <h3 class="h5 fw-bold mb-2">@L["HomePage:Feature1Title"]</h3>
                    <p class="text-muted mb-0">
                        @L["HomePage:Feature1Description"]
                    </p>
                </abp-card-body>
            </abp-card>
        </abp-column>
        
        <abp-column size-md="_4">
            <abp-card class="feature-card p-4 text-center h-100">
                <abp-card-body>
                    <div class="feature-icon icon-bg-2 mx-auto">
                        <i class="fas fa-vote-yea"></i>
                    </div>
                    <h3 class="h5 fw-bold mb-2">@L["HomePage:Feature2Title"]</h3>
                    <p class="text-muted mb-0">
                        @L["HomePage:Feature2Description"]
                    </p>
                </abp-card-body>
            </abp-card>
        </abp-column>
        
        <abp-column size-md="_4">
            <abp-card class="feature-card p-4 text-center h-100">
                <abp-card-body>
                    <div class="feature-icon icon-bg-3 mx-auto">
                        <i class="fas fa-comments"></i>
                    </div>
                    <h3 class="h5 fw-bold mb-2">@L["HomePage:Feature3Title"]</h3>
                    <p class="text-muted mb-0">
                        @L["HomePage:Feature3Description"]
                    </p>
                </abp-card-body>
            </abp-card>
        </abp-column>
    </abp-row>
</abp-container>

