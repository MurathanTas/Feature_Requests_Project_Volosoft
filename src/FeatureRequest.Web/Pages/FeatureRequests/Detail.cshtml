@page
@model FeatureRequest.Web.Pages.FeatureRequests.DetailModel
@{
    ViewData["Title"] = Model.RequestDetail?.Title;
}

@if (Model.RequestDetail != null)
{
    <div class="container mt-4">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <a href="/FeatureRequests" class="btn btn-outline-secondary">
                <i class="fa fa-arrow-left"></i> Listeye Dön
            </a>

            <a href="/FeatureRequests/Edit?id=@Model.RequestDetail.Id" class="btn btn-warning">
                <i class="fa fa-edit"></i> Düzenle
            </a>
        </div>

        <div class="card shadow-lg">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <span class="badge bg-info text-dark fs-6">@Model.RequestDetail.CategoryId</span>
                <span class="badge bg-secondary fs-6">@Model.RequestDetail.Status</span>
            </div>

            <div class="card-body">
                <h2 class="card-title text-primary mb-3">@Model.RequestDetail.Title</h2>
                <hr />
                <p class="card-text fs-5" style="white-space: pre-wrap;">@Model.RequestDetail.Description</p>

                <div class="mt-4 text-muted small">
                    <i class="fa fa-user"></i> Oluşturan: @Model.RequestDetail.CreatorUserName <br />
                    <i class="fa fa-calendar"></i> Tarih: @Model.RequestDetail.CreationTime.ToString("f")
                </div>
            </div>

            <div class="card-footer text-center py-4">
                <button id="UpvoteButton" data-id="@Model.RequestDetail.Id" class="btn btn-success btn-lg px-5 shadow">
                    <i class="fa fa-arrow-up"></i> Oy Ver (<span id="VoteCount">@Model.RequestDetail.VoteCount</span>)
                </button>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger">Kayıt bulunamadı!</div>
}

@section scripts {
    <script>
        $(function () {
            
            var service = featureRequest.featureRequests.featureRequest;

            $('#UpvoteButton').click(function () {
                var $button = $(this);
                var id = $button.attr('data-id');
                var $countSpan = $('#VoteCount');

                $button.prop('disabled', true);

                service.upvote(id).then(function () {

                    var currentCount = parseInt($countSpan.text());
                    $countSpan.text(currentCount + 1);

                    abp.notify.success('Oyunuz başarıyla kaydedildi!');

                    

                }).catch(function (err) {
                    $button.prop('disabled', false);
                    console.error(err);
                });
            });
        });
    </script>
}