@page
@using FeatureRequest.Web.Pages.FeatureRequests
@using FeatureRequest.FeatureRequests
@model IndexModel
@{
    ViewData["Title"] = "Özellik İstekleri";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h1>🚀 Özellik İstekleri</h1>
        <a href="/FeatureRequests/Create" class="btn btn-primary">
            <i class="fa fa-plus"></i> Yeni İstek Oluştur
        </a>
    </div>
    <div class="card-body">

        @if (Model.RequestList != null && Model.RequestList.Any())
        {
            <div class="list-group">
                @foreach (var item in Model.RequestList)
                {
                    <div class="list-group-item list-group-item-action flex-column align-items-start mb-3 border rounded shadow-sm p-3">

                        <div class="d-flex w-100 justify-content-between">
                            <a href="/FeatureRequests/Detail?id=@item.Id" class="text-decoration-none">
                                <h5 class="mb-1 fw-bold text-primary">@item.Title</h5>
                            </a>
                            <small class="text-muted">@item.CreationTime.ToShortDateString()</small>
                        </div>

                        <a href="/FeatureRequests/Detail?id=@item.Id" class="text-decoration-none text-secondary">
                            <p class="mb-1">
                                @item.Description
                            </p>
                        </a>

                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <div>
                                <span class="badge bg-info text-dark me-1">@item.CategoryId</span>
                                <span class="badge bg-secondary">@item.Status</span>
                            </div>

                            <button class="btn btn-outline-success btn-sm fw-bold upvote-btn" data-id="@item.Id" style="min-width: 80px;">
                                <i class="fa fa-arrow-up"></i>
                                <span class="vote-count">@item.VoteCount</span> Oy
                            </button>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-warning text-center">
                Henüz hiç özellik isteği yok. İlkini sen ekle!
            </div>
        }
    </div>
</div>

@section scripts {
    <script>
        $(function () {
            var service = featureRequest.featureRequests.featureRequest;

            $('.upvote-btn').click(function (e) {
                e.preventDefault(); 

                var $button = $(this);
                var id = $button.attr('data-id');
                var $countSpan = $button.find('.vote-count'); 

                $button.prop('disabled', true);

                service.upvote(id).then(function () {

                    var currentCount = parseInt($countSpan.text());
                    $countSpan.text(currentCount + 1);

                    $button.removeClass('btn-outline-success').addClass('btn-success text-white');

                    abp.notify.success('Oyunuz kaydedildi!');

                   

                }).catch(function (err) {
                    $button.prop('disabled', false);
                    abp.notify.error('Bir hata oluştu.');
                    console.error(err);
                });
            });
        });
    </script>
}